<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close" id="targetDataSource">
    	<property name="driverClassName" value="com.mysql.jdbc.Driver"/>
    	<property name="url" value="jdbc:mysql://localhost:3307/graffitab?autoReconnect=true&amp;useUnicode=true&amp;characterEncoding=UTF-8"/>
    	<property name="username" value="root"/>
    	<property name="password" value=""/>
    	<property name="maxIdle" value="5"/>
    	<property name="minIdle" value="2"/>
    	<property name="initialSize" value="5"/>
    </bean>
       	
</beans>