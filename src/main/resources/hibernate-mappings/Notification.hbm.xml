<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.graffitab.server.persistence.model.notification.Notification" table="notification">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="native" />
        </id>
        <property type="org.joda.time.contrib.hibernate.PersistentDateTime" name="date"/>
		<property name="isDefaultPaymentForCurrency"  type="yes_no" column="ISDEFAULTPAYMENTFORCURRENCY" not-null="true"/>

		<many-to-one class="com.graffitab.server.persistence.model.User"
		 name="user"
		 column="user_id"
		 update="false"
		 insert="false"/>

		<property name="notificationType" column="notification_type">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.graffitab.server.persistence.model.notification.Notification$NotificationType</param>
                <param name="type">12</param>
            </type>
        </property>
     </class>
</hibernate-mapping>
